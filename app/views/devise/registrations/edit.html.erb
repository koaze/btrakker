<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p style="opacity: 0.5; font-size: 90%;">On this screen, you are allowed to make desired changes over your account.  </p>
      </div>
    </div>
  </div>

  <div class="col-xs-6"">
  <div class="panel panel-default">
      <div class="panel-body">
  <center><h2>Edit <%= resource_name.to_s.humanize %></h2></center>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart => true }) do |f| %>
    <%= devise_error_messages! %>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag (current_user.cover_url), height:"200px", width:"490px" %>
        <div class="field">
          <%= f.label :cover %><br />
          <%= f.file_field :cover %>
          <%= f.hidden_field :cover_cache %>
          <%= f.label :remove_cover %><br />
          <%= f.check_box :remove_cover %> <span style="opacity: 0.7; font-style: italic;">* if checked, cover picture will be deleted.</span>
        </div>
      </div>
    </div>    

    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag (current_user.avatar_url), height:"50px", width:"50px" %>
        <div class="field">
          <%= f.label :avatar %><br />
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
          <%= f.label :remove_avatar %><br />
          <%= f.check_box :remove_avatar %> <span style="opacity: 0.7; font-style: italic;">* if checked, profile picture will be deleted.</span>
        </div>
      </div>
    </div>  

    <div class="field">
      <%= f.label :status %><br />
      <%= f.text_field :status, autofocus: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :surname %><br />
      <%= f.text_field :surname, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div><br>

    <div class="actions">
      <%= f.submit "Update", style: "float: right;", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
  </div>
  </div>
  </div>

  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p style="opacity: 0.5; font-size: 90%;">@2016 BackTrakker  |  About  |  Help  |  Terms  |  Privacy  |  Cookies  |  Ads  </p>
      </div>
    </div>
  </div>
</div>