<style>
        body {
            background: linear-gradient( /* somewhat transparent film on top of the BG to make it look darker. */
                rgba(0,0,0, 0.2),
                rgba(0,0,0, 0.2)
                ), url("/bg.jpg") no-repeat center center fixed
            
            ; /* only display once, center horizontal and vertical, dont let scroll change position. */
            -webkit-background-size: cover;
            -moz-background-size: cover; /* cover the whole html element. */
            -o-background-size: cover;
            background-size: cover;
        }

        .text {
            color: #e6e6e6;
            font-weight: 300;
            font-size: 150%;
        }
        
        
        .sign-up {
            margin-left: 80px;
            width: 400px;
            height: 600px;
            margin-top: -3%;
            padding: 25px;
            color: #e6e6e6; 
            font-weight: bolder; 
        }

        .form-control {
          background-color:  #e6e6e6;
          color:  #33adff;
        }


    </style>

        <div class="col-xs-3">
        </div>
     

        <div class="col-xs-6">
          <div class="sign-up panel" style="position: relative; background-color:rgba(0,0,0,0.20); box-shadow: inset -4px -4px rgba(0,0,0,0.20); border-radius: 10px; ">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:multipart => true}) do |f| %>

              <div class="field">
                  <center>SIGN UP</center>
              </div><br> 

              <div class="field">
                <%= f.label :username %> <span style="color: red;">*</span> <span style="color: #e6e6e6; opacity: 0.5; font-style: italic;">Must be filled and unique</span>
                <%= f.text_field :username, autofocus: true, class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :surname %><br />
                <%= f.text_field :surname, class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :email %> <span style="color: red;">*</span> <span style="color: #e6e6e6; opacity: 0.5; font-style: italic;">Must be filled and unique</span>
                <%= f.email_field :email, class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :password %> <span style="color: red;">*</span> <span style="color: #e6e6e6; opacity: 0.5; font-style: italic;">Must be filled</span>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %> <span style="color: red;">*</span> <span style="color: #e6e6e6; opacity: 0.5; font-style: italic;">Please confirm</span>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div><br>

              <div class="actions">
                <%= f.submit "Sign up", style: "float: right;", class: "btn btn-primary" %>
              </div>
              <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>

        <div class="col-xs-3">
        </div>

