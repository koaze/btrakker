<style>
    body {
        background: linear-gradient( /* somewhat transparent film on top of the BG to make it look darker. */
            rgba(0,0,0, 0.2),
            rgba(0,0,0, 0.2)
            ), url("/bg.jpg") no-repeat center center fixed
        
        ; /* only display once, center horizontal and vertical, dont let scroll change position. */
        -webkit-background-size: cover;
        -moz-background-size: cover; /* cover the whole html element. */
        -o-background-size: cover;
        background-size: cover;
    }
    h1 {
        color: white;
        font-weight: bold;
    }

    .koaze {
      margin-top: 3.5%;
    }

    .text {
        color: #e6e6e6;
        font-weight: 300;
        font-size: 150%;
    }
    .footer-links {
        text-align: center;
        color: white;
        margin-top: 30%;
        font-size: 75%;
    }
    .log-in {
        float: center;
        width: 370px;
        height: 325px;
        margin-top: 7.5%;
        text-align: left;
        margin-left: 92px;
        padding: 25px;
        color: #e6e6e6;
        font-weight: bolder; 
    }

    .log-in-form {
        margin: 5px;
    }

    .form-control {
      background-color:  #e6e6e6;
      color:  #33adff;
    }


</style>

<div class="col-xs-3">
</div>
<div class="col-xs-6">
  <center>
    <div class="koaze">
        <h1>Welcome to BackTrakker.</h1>
        <p class="text">
            Connect with your friends.<br>
            Share your moments. <br>
            Just like a blog, but with less characters!
        </p>
      </div>
  </center>  
  <div class="log-in panel" style="position: relative; background-color:rgba(0,0,0,0.20); box-shadow: inset -4px -4px rgba(0,0,0,0.25); border-radius: 10px; ">
    <% if !user_signed_in? # if the user is not signed in, render this %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <center>LOG IN</center>
        </div><br>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div><br>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div><br>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div><br>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", style: "float: right;", class: "btn btn-primary" %>
        </div>
        <% end %>

    <% else # if the user IS signed in, render the following %>
      <script>document.location = "/home"</script>
    <% end %> 
  </div>
</div>
<div class="col-xs-3">
</div>  